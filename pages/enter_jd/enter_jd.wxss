/* pages/enter_jd/enter_jd.wxss */
page{
    background-color: #f0f0f0;
}
.top_item{
    width: 100%;
    line-height: 96rpx;
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    background-color: white;
	box-shadow: 0 0 8rpx #d2d2d2;
    margin-bottom: 20rpx;
}
.top_item view{
    color: #666;
    letter-spacing: 1px;
}
.tact{
    color: #ff5cab !important;
    border-bottom: 1px solid #ff5cab;
}




.eitem{
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
	background-color: white;
	margin-bottom: 20rpx;
}
.uname{
	font-size: 28rpx;
	letter-spacing: 2rpx;
	color: #333333;
	padding-top: 50rpx;
	box-sizing: border-box;
	margin-bottom: 26rpx;
}
.time{
	font-size: 26rpx;
	color: #999999;
	letter-spacing: 2rpx;
	padding-bottom:50rpx;
	box-sizing: border-box;
}
.reason{
	font-size: 26rpx;
	color: #999999;
	letter-spacing: 2rpx;
	line-height: 80rpx;
	border-top: 2rpx solid #DDDDDD;
}
