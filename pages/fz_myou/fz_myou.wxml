<view class="searchs">
    <input type="number" placeholder="请输入要发展用户的手机号" class="keyword" maxlength="11" bindinput='getkeyword'/>
    <view class="gosearch" bindtap='gosearch'>搜索</view>
</view>
<view class="apply_tip">
    请提交真实的个人信息，确保申请一次通过~
</view>
<view class="aitem">
    <view>手机号</view>
    <input type="text" placeholder="{{phones}}" disabled class="phone" />
</view>
<view class="aitem">
    <view>昵称</view>
    <input type="text" placeholder="{{nicheng}}" disabled class="nicheng" readonly="readonly" />
</view>
<view class="apply_tip">
    填写该用户的个人信息
</view>
<view class="aitem">
    <view>姓名</view>
    <input type="text" placeholder="请输入真实姓名" class="names" bindinput='getname' />
</view>
<view class="uptitle">
    请上传个人身份证照
</view>
<view class="upfiles">
    <view>
        <image src="{{zheng}}" id="zheng" bindtap='zheng' ></image>
        <br />手持身份证照
    </view>
    <view>
        <image src="{{fan}}" id="fan" bindtap='fan'></image>
        <br />身份证背面照
    </view>
</view>
<view class="abottom">
    <view class="aptip">提交则表示您已同意
        <view>共享联盟认证协议</view>
    </view>
    <view class="submit" bindtap='submit'>立即申请</view>
</view>