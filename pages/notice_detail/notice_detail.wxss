/* pages/notice_detail/notice_detail.wxss */
@import '../../app.wxss';
page{
    background-color: #f0f0f0;
}
.poster{
    width: 100%;
    height: 400rpx;
    position: relative;
    overflow: hidden;
}
.poster image{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
.wrap{
    position: relative;
    top: -80rpx;
}
.notice-detail{
    padding: 40rpx;
    background-color: white;   
}
.notice-detail text{
    display: block;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 50rpx;
}
.notice-detail view{
    font-size: 26rpx;
    color: #808080;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    border-bottom: 1px dotted #dddddd;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}
.contact-way{
    font-size: 24rpx !important;
    color: #fe75b7 !important;
    border-bottom: 0 !important;
}