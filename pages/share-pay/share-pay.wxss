/* pages/share-pay/share-pay.wxss */
page{
  background: #f2f2f2;
  font-size: 30rpx;
}
.top-img{
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.top-img image{
  width: 100%;
  height: 100%;
}
.res{
  margin: 30rpx;
}
.list{
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.list-r{
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  margin-top: 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ccc;
}
.left{
  float: left;
}
.rigth{
  float: right;
}
.go{
  width:calc(100% - 60rpx);
  margin-left: 30rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin-top: 70rpx;
  background: #FF5CAB;
  color: #fff;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
}
.active{
  border: 1rpx solid #FF5CAB;
}