/* pages/submit_notice/submit_notice.wxss */
page{
    background-color: #f7f7f7;
    width: 100%;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}
.wrap{
    background-color: white;
    width: calc(100% - 40rpx);
    padding: 20rpx;
    box-sizing: border-box;
    margin-left: 20rpx;
    border-radius: 6rpx;
    margin-top: 20rpx;
    box-shadow: 0 0 10px #d0c7c7;
    position: relative;
}
.title{
    font-size: 26rpx;
    color: #333;
    letter-spacing: 2rpx;
    margin-bottom: 20rpx;
}
textarea{
    width: 100%;
    height: 100rpx;
    background-color: #f8f8f8;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    font-size: 24rpx;
    letter-spacing: 1rpx;
}
.wrap image{
    width: 80rpx;
    height: 80rpx;
}
.snitem{
    font-size: 26rpx;
    color: #333;
    letter-spacing: 2rpx;
    border-bottom: 2rpx solid #dddddd;
    line-height: 60rpx;
}
.snlabels{
    width: 60%;
    float: right;
    text-align: right;
}
.subnotice{
    width: calc(100% - 100rpx);
    margin-left: 50rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    background-color: #fe5ba9;
    text-align: center;
    color: white;
    letter-spacing: 2rpx;
    font-size: 26rpx;
    margin-top: 60rpx;
    margin-bottom: 60rpx;
}